    <div class="flex flex-col items-center text-xs md:flex-row md:gap-2 md:text-sm">
        <a href="{{ $item }}">
            <div class="{{ $_name === 'admin.'.$item.'.index' ? 'text-blue' : ''}} flex flex-col md:flex-row md:gap-2 items-center transition ease-in-out">
                {{ text('admin.'.$item) }}
            </div>
        </a>
    </div>
{ /foreach }
